<Window x:Class="MecyInformation.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MecyInformation"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Mecy Information" Height="250" Width="500"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Border CornerRadius="20" Background="Beige">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Source="Resources/Logo.png"
                       Width="300"
               Margin="20"
               Grid.Row="0" />
                <ProgressBar IsIndeterminate="True" Grid.Row="1" />
                <TextBlock HorizontalAlignment="Center"
                   Grid.Row="2"
                   VerticalAlignment="Center">Downloading data from OpenData server...</TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
