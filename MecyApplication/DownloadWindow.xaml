<Window x:Class="MecyApplication.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MecyApplication"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Title="Downloading data" Height="100" Width="350"
        Background="#FF4C4C4C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height=".4*" />
        </Grid.RowDefinitions>
        <Label Content="Downloading data..."
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="15"
               Foreground="White"/>
        <ProgressBar IsIndeterminate="True"
                     Grid.Row="1"
                     Margin="3" Background="#FF4C4C4C" Foreground="#FFE1A3FF" />
    </Grid>
</Window>
